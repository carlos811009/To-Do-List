<div class="mt-5" style="display: flex;">
  <div class="m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Register</h1>
      {{!-- {{> message}} --}}
      <form action="./register" method="POST">
        <div class="form-group mb-4">
          <label for="name">Nickname</label>
          <input type="text" id="name" name="name" class="form-control" placeholder="請輸入暱稱" value={{name}}>
        </div>
        <div class="form-group mb-4">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="請輸入密碼"
            value={{password}}>
        </div>
        <div class="form-group mb-4">
          <label for="confirmPassword">Confirm Password</label>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="確認密碼"
            value={{confirmPassword}}>
        </div>
        <button type="submit" class="btn btn-primary btn-block col-12">Register</button>
      </form>
      <p class="lead mt-4">
        Have An Account? <a href="/login">Login</a>
      </p>
    </div>
  </div>
</div>